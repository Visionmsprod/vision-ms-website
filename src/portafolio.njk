---
layout: "base.njk"
title: "Portafolio"
---

<style>
/* Estilos opcionales para filtros y galería */
.portfolio-filters {
  display: flex;
  flex-wrap: wrap;
  gap: 10px;
  justify-content: center;
  margin-bottom: 30px;
}
.filter-btn {
  padding: 10px 20px;
  border: none;
  background-color: var(--color-rojo-principal);
  color: white;
  border-radius: 20px;
  cursor: pointer;
  font-weight: bold;
  transition: background-color 0.3s ease;
}
.filter-btn:hover,
.filter-btn.active {
  background-color: var(--color-rojo-oscuro);
}
.portfolio-gallery {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
  gap: 20px;
}
.portfolio-item img {
  width: 100%;
  border-radius: 12px;
}
</style>

<main>
    <section class="page-header" style="background-image: linear-gradient(rgba(0,0,0,0.6), rgba(0,0,0,0.6)), url('/images/evento.jpg');">
        <div class="container"><h1>Nuestro Trabajo</h1></div>
    </section>

    <section id="portfolio-page">
        <div class="container">
            <div class="portfolio-filters">
                <button class="filter-btn active" data-filter="all">Todo</button>
                <button class="filter-btn" data-filter="bodas">Bodas</button>
                <button class="filter-btn" data-filter="quince">Quince Años</button>
                <button class="filter-btn" data-filter="eventos">Eventos</button>
                <button class="filter-btn" data-filter="producto">Producto</button>
                <button class="filter-btn" data-filter="retrato">Retrato</button>
            </div>

            <div class="portfolio-gallery">
                {% for item in collections.portafolio %}
                    <div class="portfolio-item" data-category="{{ item.data.category }}">
                        <img src="{{ item.data.image }}" alt="{{ item.data.title }}">
                    </div>
                {% endfor %}
            </div>
        </div>
    </section>
</main>
